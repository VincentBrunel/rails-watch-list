<h1>Details of my list</h1>

<%= @list.name %>
<%= link_to 'Add bookmark', new_list_bookmark_path(@list.id) %>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li> <%= bookmark.movie.title %> - <%= bookmark.movie.overview %> 
    <%= link_to 'Delete bookmark', bookmark_path(bookmark), data: { turbo_method: :delete , turbo_confirm: "Are you sure?"} %>
</li>
  <% end %>

</ul>